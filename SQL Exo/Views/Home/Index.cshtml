@{
    ViewData["Title"] = "Accueil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="hero mb-5 text-center">
                <h1 class="display-4 fw-bold">Bienvenue sur SocialFun</h1>
                <p class="lead">Un mini-réseau social sobre, lisible et moderne</p>
                
            </div>

            <div class="row g-4 mb-5">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="mb-3"><span class="badge badge-fun rounded-pill px-3 py-2">Feed</span></div>
                            <h5 class="card-title">Feed en temps réel</h5>
                            <p class="card-text">Explorez les derniers posts, rafraîchissement automatique</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="mb-3"><span class="badge badge-fun rounded-pill px-3 py-2">Simple</span></div>
                            <h5 class="card-title">Expérience fluide</h5>
                            <p class="card-text">Interface agréable, claire et responsive</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="mb-3"><span class="badge badge-fun rounded-pill px-3 py-2">Sûr</span></div>
                            <h5 class="card-title">Technos modernes</h5>
                            <p class="card-text">ASP.NET Core + Bootstrap pour des performances au top</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info" role="alert">
                <h5 class="alert-heading">
                    <i class="fas fa-info-circle"></i> Fonctionnalités principales
                </h5>
                <ul class="mb-0 text-start">
                    <li><strong>Lisibilité :</strong> Couleurs sobres, contrastes forts</li>
                    <li><strong>Feed dynamique :</strong> Rafraîchissement automatique</li>
                    <li><strong>Mobile-first :</strong> Expérience agréable sur mobile</li>
                    <li><strong>Performance :</strong> UI réactive et efficace</li>
                </ul>
            </div>

            
        </div>
    </div>
</div>