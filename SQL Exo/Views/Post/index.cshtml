@model IEnumerable<SQL_Exo.Models.Post>

@{
    ViewData["Title"] = "Liste des Posts";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-primary">
                <i class="fas fa-list"></i> Liste des Posts
            </h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Créer un nouveau post
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> Aucun post disponible. Créez votre premier post !
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var post in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">@post.Titre</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                @if (post.Contenu.Length > 100)
                                {
                                    @(post.Contenu.Substring(0, 100) + "...")
                                }
                                else
                                {
                                    @post.Contenu
                                }
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-user"></i> @post.Auteur
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i> @post.DateCreation.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@post.PostId" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i> Détails
                                </a>
                                <a asp-action="Edit" asp-route-id="@post.PostId" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <button type="button" class="btn btn-outline-danger btn-sm" 
                                        onclick="confirmDelete(@post.PostId, '@post.Titre')">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer le post "<span id="postTitle"></span>" ?</p>
                <p class="text-danger"><small>Cette action est irréversible.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(postId, postTitle) {
            document.getElementById('postTitle').textContent = postTitle;
            document.getElementById('deleteForm').action = '/Post/Delete/' + postId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
