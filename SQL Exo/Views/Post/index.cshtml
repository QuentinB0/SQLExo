@model IEnumerable<SQL_Exo.Models.Post>

@{
    ViewData["Title"] = "Liste des Posts";
}

<div class="container mt-4">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h2 class="text-primary mb-0">
                <i class="fas fa-list"></i> Le Feed SocialFun
            </h2>
            <small class="text-muted">Rafraîchissement automatique toutes les 30s</small>
        </div>
    </div>

    <div id="alertZone" class="mb-3"></div>

    <div class="d-flex gap-2 mb-3">
        <button id="refreshBtn" type="button" class="btn btn-outline-primary">
            <i class="fas fa-rotate-right"></i> Rafraîchir
        </button>
        <div class="text-muted align-self-center small" id="lastRefreshInfo"></div>
    </div>

    <div id="postsContainer" class="row">
        <!-- Rendu dynamique des cartes de posts -->
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer le post "<span id="postTitle"></span>" ?</p>
                <p class="text-danger"><small>Cette action est irréversible.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(postId, postTitle) {
            document.getElementById('postTitle').textContent = postTitle;
            document.getElementById('deleteForm').action = '/Post/Delete/' + postId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
