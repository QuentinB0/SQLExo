@model IEnumerable<SQL_Exo.Models.Post>

@{
    ViewData["Title"] = "Liste des Posts";
}

<div class="container mt-4">
    <div class="feed-header mb-5">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="feed-title-container">
                    <h1 class="feed-title">
                        <span class="feed-icon">üî•</span>
                        <span class="feed-text">Le Feed SocialFun</span>
                        <span class="feed-emoji">‚ú®</span>
                    </h1>
                    <p class="feed-subtitle">
                        <i class="fas fa-sync-alt"></i> Rafra√Æchissement automatique toutes les 30s
                    </p>
                </div>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="feed-stats">
                    <span class="badge feed-badge">Posts en temps r√©el</span>
                </div>
            </div>
        </div>
    </div>

    <div id="alertZone" class="mb-3"></div>

    <div class="d-flex gap-2 mb-3">
        <button id="refreshBtn" type="button" class="btn btn-outline-primary">
            <i class="fas fa-rotate-right"></i> Rafra√Æchir
        </button>
        <div class="text-muted align-self-center small" id="lastRefreshInfo"></div>
    </div>

    <div id="postsContainer" class="row">
        <!-- Rendu dynamique des cartes de posts -->
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>√ätes-vous s√ªr de vouloir supprimer le post "<span id="postTitle"></span>" ?</p>
                <p class="text-danger"><small>Cette action est irr√©versible.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(postId, postTitle) {
            document.getElementById('postTitle').textContent = postTitle;
            document.getElementById('deleteForm').action = '/Post/Delete/' + postId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
