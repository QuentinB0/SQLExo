@model SQL_Exo.Models.Post

@{
    ViewData["Title"] = "Cr√©er un Post";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card create-post-card shadow-lg border-0">
                <div class="card-header create-post-header text-white">
                    <h3 class="card-title mb-0 text-center">
